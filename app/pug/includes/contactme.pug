    form.contactform
        .grid-container
            .firstrow
                .item1.leftborder
                    input.input-style(type="text" id="name" name="name"  placeholder="*Name")
                .item2.leftborder
                    input.input-style(type="text" id="number" name="number" placeholder="Number")
            .item3.leftborder
                input.input-style(type="text" id="email" name="email" placeholder="*E-mail")
            .item4.leftborder
                input.input-style(type="text" id="message" name="message" placeholder="*Message")
